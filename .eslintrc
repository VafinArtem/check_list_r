{
  "env": {
    "es6": true,
    "es2017": true,
    "jest": true,
    "commonjs": true,
    "browser": true
  },
  "plugins": ["react"],
  "extends": ["htmlacademy/es6", "plugin:react/recommended", "react-app", "react-app/jest"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "17"
    }
  }
}
